// Program to illustrate default action for alarm system call
// alarm(2) by default terminates the process that executes it after specified
// number of seconds

#include <stdio.h>
#include <unistd.h>

int main()
{
    int i;
    alarm ( 10 );		// Terminate after 10 seconds

    // Start an infinite loop

    for ( i = 0; ; i++ )
    {
	printf ( "%d\n", i );
	sleep ( 1 );
    }
}
